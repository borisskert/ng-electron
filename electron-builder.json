{
  "productName": "ng-electron",
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.code-workspace",
    "!LICENSE.md",
    "!package.json",
    "!package-lock.json",
    "!src/",
    "!e2e/",
    "!hooks/",
    "!angular.json",
    "!_config.yml",
    "!karma.conf.js",
    "!tsconfig.json",
    "!tslint.json"
  ],
  "win": {
    "icon": "build/icons/win/app.ico",
    "target": [
      "portable",
      "nsis-web"
    ],
    "verifyUpdateCodeSignature": false
  },
  "mac": {
    "icon": "build/icons/mac/app.icns",
    "target": [
      "dmg",
      "zip"
    ]
  },
  "linux": {
    "icon": "build/icons/png",
    "target": [
      "AppImage"
    ]
  },
  "publish": [
    {
      "provider": "github",
      "owner": "borisskert",
      "repo": "electron-updater-test"
    }
  ],
  "electronUpdaterCompatibility": ">=4.0.6"
}
